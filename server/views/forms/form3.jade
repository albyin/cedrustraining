h2 Residential Address

form.col-md-8(name="userForm", novalidate, ng-submit="submitForm(userForm.$valid)")
	
	div.form-group(ng-class="{'has-error':userForm.address.$invalid && !userForm.address.$pristine}")
		label Street Address
		input.form-control(type="text", name="street", ng-model="customer.street", required)
		p.validate-error(ng-show="userForm.street.$invalid && !userForm.street.$pristine") Please enter street Address
		
	div.form-inline
		div.form-group
			label State
			br
			select(ng-model="customer.state", ng-change="getCities()", required)
				option(ng-repeat="state in states") {{state}}
		div.form-group
			label City
			br
			select(ng-model="customer.city", required)
				option(ng-repeat="city in cities") {{city}}
	br

	button.btn.btn-warning.pull-left(type="button", ng-click="backButton()") Back
	button.btn.btn-success.pull-right(type="submit", ng-disabled="userForm.$invalid") Submit
	button.btn.btn-info.pull-right(type="button", ng-click="") Save Now